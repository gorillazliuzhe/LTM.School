@model LTM.School.Core.Models.Student

@{
    ViewData["Title"] = "Edit";
}

<h2>编辑</h2>

<h4>学生信息</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
